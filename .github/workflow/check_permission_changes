name: Check Permission Changes

on:
  push:
    branches:
      - main  # change this to the branch you want to trigger the workflow
  pull_request:
    branches:
      - main # Same as above

jobs:
  check-permissions:
    runs-on: ubuntu-latest
    steps:
    - name: Checkout code
      uses: actions/checkout@v4
      
    - name: Set up JDK 17
      uses: actions/setup-java@v4
      with:
        java-version: '17'
        distribution: 'adopt'
        
    - name: Build project
      run: mvn clean install
      
    - name: Check for YAML changes in permissions folder
      id: files
      run: |
        echo "Checking for changes in permissions/*.YAML files..."
        FILES=$(git diff --name-only ${{ github.event.before }} ${{ github.sha }} -- 'permissions/*.YAML')
        echo "::set-output name=changed::${FILES}"
      
    - name: Update permissions if necessary
      if: steps.files.outputs.changed != ''
      run: |
        echo "Changes detected in permissions files: ${{ steps.files.outputs.changed }}"
        for file in ${{ steps.files.outputs.changed }}
        do
          echo "Processing changes in $file"
          GIT_DIFF=$(git diff ${{ github.event.before }} ${{ github.sha }} -- $file)
          if [[ "$GIT_DIFF" == *"github_team"* || "$GIT_DIFF" == *"developers"* ]]; then
            echo "Updating the team in: $file"
            java -jar target/jar2.jar $file
          else
            echo "No relevant changes to the team in: $file"
          fi
        done
      env:
        GITHUB_OAUTH: ${{ secrets.GITHUB_TOKEN }}
